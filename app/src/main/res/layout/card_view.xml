<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <!-- A CardView that contains a TextView -->
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@android:color/background_dark"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="8dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bgimageView"
                android:alpha="0.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:srcCompat="@drawable/bg1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/card_text1"
                android:layout_margin="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#e6e7ec"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_text1"
                android:layout_margin="6dp"
                android:textColor="#8ec2c9"
                android:textSize="25sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
